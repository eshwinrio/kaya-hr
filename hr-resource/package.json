    "prisma": "^5.9.1",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@prisma/client": "^5.9.1",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "http-errors": "^2.0.0",
